<div class="flexcol" style="flex: 1;">
    <div class="section-header">
        {{localize "BREAK.Effects"}}
        <div style="display:flex;width:100%;justify-content:flex-end;margin-right:12px;">
            <a class="add-effect" data-action="addEffect"><i class="fa-regular fa-plus"></i></a>
        </div>
    </div>
    <div style="flex 1; display: flex; column-gap: 5%;flex-wrap:wrap;">
        {{#each document.effects as |effect|}}
            <div style="margin-bottom: 6px;justify-content: center;width:20%;display:flex;" data-id="{{effect._id}}" data-type="effect">
                <a style="cursor: pointer;" class="effect-link">{{effect.name}}</a>
                <a class="item-control interface-only" style="margin-left: 6px;" data-context-menu data-action="openContext">
                    <i class="fas fa-ellipsis-vertical"></i>
                </a>
            </div>
        {{/each}}
    </div>
</div>