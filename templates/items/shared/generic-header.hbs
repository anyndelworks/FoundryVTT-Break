<section class="sheet-header" style="flex: 0;margin-bottom:12px;display:flex;">
    <img class="profile-img" src="{{document.img}}" title="{{document.name}}" data-action="editImage" data-field="img" style="height:100px;max-width:33%"/>
    <div style="height: 100%;display:flex;flex-direction:column;width: 100%;">
        <div class="header-fields" style="display:flex; align-items:center;width:100%">
            <h3 class="charname">
                <input name="name" type="text" value="{{document.name}}" placeholder="Name" />
            </h3>
        </div>
    </div>
</section>
