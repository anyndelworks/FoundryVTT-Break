<section class="sheet-header" style="flex: 0;margin-bottom:12px;display:flex;">
    <img class="profile-img" src="{{document.img}}" title="{{document.name}}" data-action="editImage" data-field="img" style="height:100px;max-width:33%" />
    <div style="height: 100%;display:flex;flex-direction:column;width: 100%;">
        <div class="header-fields" style="display:flex; align-items:center;width:100%">
            <h3 class="charname">
                <input name="name" type="text" value="{{document.name}}" placeholder="Name" />
            </h3>
            <div style="align-items: center; display:flex; flex-direction:column;margin-left:auto;">
                <input name="system.slots" type="number" class="aptitude-base-circle" style="text-align: center; margin-left:0px;" value="{{document.system.slots}}" placeholder="0"/>
                <label style="text-transform: uppercase;">{{localize "BREAK.Slots"}}</label>
            </div>
        </div>
        <div style="display: flex;align-items:center;height:100%;">
            <div style="flex: 1; display:flex;height:100%;align-items:center;column-gap:12px;">
                {{#if requiresType}}
                <select name="system.type" id="type-select" >
                    {{#each itemTypes as |type|}}
                        <option value="{{type.key}}" {{#if type.active}}selected="selected"{{/if}}>{{type.label}}</option>
                    {{/each}}
                </select>
                {{/if}}
                {{#if isWeapon}}
                <select name="system.weaponType1" id="type-select" >
                    {{#each itemTypes as |type|}}
                        <option value="{{type.key}}" {{#if type.active1}}selected="selected"{{/if}}>{{type.label}}</option>
                    {{/each}}
                </select>
                <select name="system.weaponType2" id="type-select" >
                    <option value="">{{localize "BREAK.None"}}</option>
                    {{#each itemTypes as |type|}}
                        <option value="{{type.key}}" {{#if type.active2}}selected="selected"{{/if}}>{{type.label}}</option>
                    {{/each}}
                </select>
                {{/if}}
            </div>
            <div style="display: flex;align-items:center; flex: 1;justify-content:flex-end;">
                <i class="fas fa-gem"></i>
                <input name="system.value.gems" value="{{document.system.value.gems}}" placeholder="0" class="money-input" type="number"/>
                <i class="fas fa-coins"></i>
                <input name="system.value.coins" value="{{document.system.value.coins}}" placeholder="0" class="money-input" type="number"/>
                <i class="fas fa-coin-vertical"></i>
                <input name="system.value.stones" value="{{document.system.value.stones}}" placeholder="0" class="money-input" type="number"/>
            </div>
        </div>
    </div>
</section>
