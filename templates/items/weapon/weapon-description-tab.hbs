<section class="tab description scrollable {{tabs.description.cssClass}}" data-group="primary" data-tab="description" style="height: 100%;">
    <div class="flexcol" style="height: 100%;">
        <div class="section-header">
            {{localize "BREAK.Description"}}
        </div>
        {{#if editable}}
        <prose-mirror name="system.description" value="{{ document.system.description }}" style="flex: 1;"></prose-mirror>
        {{else}}
        <div class="editor">
            <div class="editor-content">{{{ descriptionHTML }}}</div>
        </div>
        {{/if}}
    </div>
</section>