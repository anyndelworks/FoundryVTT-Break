<section class="tab description flexcol scrollable {{tabs.description.cssClass}}" autocomplete="off" style="height: 100%;" data-group="primary" data-tab="description">
    <div style="display: flex; gap: 15px;flex: 1;">
        <div class="flexcol" style="flex: 1;">
            <div class="section-header">
                {{localize "BREAK.Advantages"}}
            </div>
            {{#if editable}}
            <prose-mirror name="system.advantages" value="{{ document.system.advantages }}" style="flex: 1;"></prose-mirror>
            {{else}}
            <div class="editor">
                <div class="editor-content">{{{ advantagesHTML }}}</div>
            </div>
            {{/if}}
        </div>
        <div class="flexcol" style="flex: 1;">
            <div class="section-header">
                {{localize "BREAK.Disadvantages"}}
            </div>
            {{#if editable}}
            <prose-mirror name="system.disadvantages" value="{{ document.system.disadvantages }}" style="flex: 1;"></prose-mirror>
            {{else}}
            <div class="editor">
                <div class="editor-content">{{{ disadvantagesHTML }}}</div>
            </div>
            {{/if}}
        </div>
    </div>
    <div class="flexcol" style="flex: 1;">
        <div class="section-header">
            {{localize "BREAK.Description"}}
        </div>
        {{#if editable}}
        <prose-mirror name="system.description" value="{{ document.system.description }}" style="flex: 1;"></prose-mirror>
        {{else}}
        <div class="editor">
            <div class="editor-content">{{{ descriptionHTML }}}</div>
        </div>
        {{/if}}
    </div>
</section>
