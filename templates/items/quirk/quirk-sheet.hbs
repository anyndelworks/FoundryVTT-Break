<section class="flexcol {{cssClass}} scrollable" autocomplete="off">
    <div style="display: flex; gap: 15px;">
        <div class="flexcol" style="flex: 1;">
            <div class="section-header">
                {{localize "BREAK.Advantages"}}
            </div>
            {{#if editable}}
            <prose-mirror name="system.advantages" value="{{ document.system.advantages }}"></prose-mirror>
            {{else}}
            <div class="editor">
                <div class="editor-content">{{{ advantagesHTML }}}</div>
            </div>
            {{/if}}
        </div>
        <div class="flexcol" style="flex: 1;">
            <div class="section-header">
                {{localize "BREAK.Disadvantages"}}
            </div>
            {{#if editable}}
            <prose-mirror name="system.disadvantages" value="{{ document.system.disadvantages }}"></prose-mirror>
            {{else}}
            <div class="editor">
                <div class="editor-content">{{{ disadvantagesHTML }}}</div>
            </div>
            {{/if}}
        </div>
    </div>
    <div class="flexcol" style="flex: 1;">
        <div class="section-header">
            {{localize "BREAK.Description"}}
        </div>
        {{#if editable}}
        <prose-mirror name="system.description" value="{{ document.system.description }}"></prose-mirror>
        {{else}}
        <div class="editor">
            <div class="editor-content">{{{ descriptionHTML }}}</div>
        </div>
        {{/if}}
    </div>
</section>
