<section class="scrollable">
    <h2>{{localize "CONFIG.WeaponTypeConfiguration"}}</h2>
    {{#each weaponTypes as |type key|}}
    <fieldset>
        <legend>{{key}}</legend>
        <label>{{localize "BREAK.Name"}}: <input type="text" name="weaponTypes.{{key}}.label" value="{{type.label}}"/></label>
        <p>{{localize "BREAK.GEAR.TYPE.Ranged"}}: <input type="checkbox" name="weaponTypes.{{key}}.ranged" {{#if type.ranged}}checked{{/if}}/></p>
        {{#if type.ranged}}<label>{{localize "BREAK.LoadingTime"}}: <input type="number" name="weaponTypes.{{key}}.loadingTime" value="{{type.loadingTime}}"/></label>{{/if}}
        <label>{{localize "BREAK.GEAR.ExtraDamage"}}: <input type="number" name="weaponTypes.{{key}}.extraDamage" value="{{type.extraDamage}}"/></label>
        {{#if type.ranged}}<label>{{localize "BREAK.Range"}}: <input type="number" name="weaponTypes.{{key}}.range" value="{{type.range}}"/></label>{{/if}}
        <label>{{localize "BREAK.Slots"}}: <input type="number" name="weaponTypes.{{key}}.slots" value="{{type.slots}}"/></label>
        <label>{{localize "BREAK.Hands"}}: <input type="number" name="weaponTypes.{{key}}.hands" value="{{type.hands}}"/></label>
        <div style="display: flex;align-items:center; flex: 1;justify-content:flex-end;column-gap: 12px; margin-top:17px;">
            <i class="fas fa-gem"></i>
            <input name="weaponTypes.{{key}}.value.gems" value="{{type.value.gems}}" placeholder="0" class="money-input" type="number"/>
            <i class="fas fa-coins"></i>
            <input name="weaponTypes.{{key}}.value.coins" value="{{type.value.coins}}" placeholder="0" class="money-input" type="number"/>
            <i class="fas fa-coin-vertical"></i>
            <input name="weaponTypes.{{key}}.value.stones" value="{{type.value.stones}}" placeholder="0" class="money-input" type="number"/>
        </div>
    </fieldset>
    {{/each}}
</section>